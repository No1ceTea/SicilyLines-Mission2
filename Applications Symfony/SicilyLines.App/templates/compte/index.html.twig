        {% block stylesheets %}
        <link href="{{ asset('css/Login.css') }}" rel="stylesheet" type="text/css"/>        
        {% endblock %}

</head>

<body>
        {% block body %}


	<header>
		<div class="navbar">

			<div class="LogoLink">
				<h2>Sicily Lines</h2>
			</div>

			<ul class="NavLink">
				<a class="NavLink" href="{{ path('accueil')}}">Accueil</a>
				<a class="NavLink" href="{{ path('reservation')}}">RÃ©servation</a>
